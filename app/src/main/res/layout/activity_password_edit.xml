<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.PasswordEdit"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:background="@drawable/mantap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/etPasswordLama"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etUsernameRegister"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/kotaktulisan"
        android:drawableLeft="@drawable/sandi"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Password Lama"
        android:inputType="textPassword"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/etPasswordBaru"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etUsernameRegister"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/kotaktulisan"
        android:drawableLeft="@drawable/sandi"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Password Baru"
        android:inputType="textPassword"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/etPasswordLama"
        app:layout_constraintStart_toStartOf="@+id/etPasswordLama"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordLama" />

    <Button
        android:id="@+id/btnSavePassword"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_below="@+id/etPasswordLogin"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/tombol"
        android:drawableTint="#FFFFFF"
        android:text="Save Password"
        android:textColor="#ffff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/etPasswordBaru"
        app:layout_constraintStart_toStartOf="@+id/etPasswordBaru"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordBaru" />

</androidx.constraintlayout.widget.ConstraintLayout>