<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="64dp"
                android:background="@drawable/mantap"
                 />

            <EditText
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/logo"
                android:layout_marginStart="120dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="120dp"
                android:background="@drawable/kotaktulisan"
                android:drawableLeft="@drawable/username"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="Username"
                android:textSize="15dp"
                />

            <EditText
                android:id="@+id/tvNama"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tvUsername"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="120dp"
                android:background="@drawable/kotaktulisan"
                android:drawableLeft="@drawable/nama"
                android:drawablePadding="10dp"
                android:text="Nama"
                android:textSize="15dp"
                 />

            <Button
                android:id="@+id/btnEditProfil"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tvNama"
                android:layout_centerInParent="true"
                android:background="@drawable/tombol"
                android:drawableLeft="@drawable/arrow_back"
                android:drawableTint="#FFFFFF"
                android:layout_margin="15dp"
                android:text="Edit Profile"
                android:textColor="#ffff"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btnEditProfil"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:background="@drawable/tombol"
                android:drawableRight="@drawable/arrow_forward"
                android:drawableTint="#FFFFFF"
                android:text="LOGOUT"
                android:textColor="#ffff"
                android:textStyle="bold"
                 />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>